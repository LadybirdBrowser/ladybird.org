---
import Headshot from "./headshot.astro";
---

<section id="board" class="single-content">
  <div class="container">
    <span class="org-section-label">02 / Leadership</span>
    <h2>Leadership</h2>

    <h3 class="board-sub">Board of Directors</h3>
    <div class="headshots-grid">
      <Headshot
        fullName="Andreas Kling"
        title="President"
        image="/assets/img/leadership/andreas-kling.webp"
      />
      <Headshot
        fullName="Tim Flynn"
        title="Secretary"
        image="/assets/img/leadership/tim-flynn.webp"
      />
      <Headshot
        fullName="Mike Shaver"
        title="Treasurer"
        image="/assets/img/leadership/mike-shaver.webp"
      />
    </div>

    <h3 class="board-sub">Management</h3>
    <div class="headshots-grid">
      <Headshot
        fullName="Jelle Raaijmakers"
        title="Chief Operating Officer"
        image="/assets/img/leadership/jelle-raaijmakers.webp"
      />
    </div>
  </div>
</section>

<style>
  .org-section-label {
    font-family: var(--font-mono);
    font-size: 13px;
    letter-spacing: 0.06em;
    color: var(--color-accent);
    display: block;
    margin-bottom: 16px;
  }

  .board-sub {
    margin-bottom: 24px;
    margin-top: 48px;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--border);
  }

  .board-sub:first-of-type {
    margin-top: 32px;
  }
</style>
