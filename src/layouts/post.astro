---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from "@/layouts/base.astro";
const { frontmatter } = Astro.props;

type Props = { frontmatter: CollectionEntry<'posts'>['data'] };
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  author={frontmatter.author}
  image={frontmatter.image}
>
  <div class="min-h-screen">
    <section class="hero hero_single">
      <div class="container custom-row">
        <div class="hero__tf">
          <p class="text-white">
            <span
              class="bg-clip-text text-transparent bg-linear-to-r from-[#6d98cc] to-[#8a64e5]"
              >{frontmatter.author || "Announcement"}</span
              >| {new Date(frontmatter.date).toUTCString().slice(0, 16)}
          </p>
          <h1 class="text-white">{frontmatter.title}</h1>
        </div>
      </div>
    </section>
    <section class="single-content">
      <div class="container container-narrow">
        <slot />
      </div>
    </section>
  </div>
</BaseLayout>
