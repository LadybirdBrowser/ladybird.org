---
import BaseLayout from "@/layouts/base.astro";
import type { Post } from "@/content/config";

type Props = {
  frontmatter: Post;
  children: any;
};
const { frontmatter } = Astro.props;
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  author={frontmatter.author}
  image={frontmatter.image}
>
  <div class="min-h-screen">
    <section class="hero hero_single">
      <div class="container custom-row">
        <div class="hero__tf">
          <p class="text-[#fff]">
            <span
              class="bg-clip-text text-transparent bg-gradient-to-r from-[#6d98cc] to-[#8a64e5]"
              >{frontmatter.author || "Announcement"}</span
            > | {frontmatter.date.toUTCString().slice(0, 16)}
          </p>
          <h1 class="text-[#fff]">{frontmatter.title}</h1>
        </div>
      </div>
    </section>
    <section class="single-content">
      <div class="container container-narrow">
        <slot />
      </div>
    </section>
  </div>
</BaseLayout>
