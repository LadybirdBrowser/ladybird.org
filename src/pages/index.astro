---
import { defaultLang } from "@/i18n/ui";

export const prerender = false;

let preferredLocale = Astro.preferredLocale;

if (preferredLocale) {
  return Astro.redirect(`/${preferredLocale}/`);
} else {
  return Astro.redirect(defaultLang);
}
